{
  "name": "backend",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "typescript-eslint": "^8.26.0"
  },
  "scripts": {
    "build": "bunx tsc",
    "start": "bun --bun dist/index.js",
    "dev": "bun --watch src/index.ts",
    "check": "bunx tsc --noEmit",
    "lint": "bunx eslint ./src --ext .ts,.tsx",
    "lint:fix": "bunx eslint ./src --ext .ts,.tsx --fix"
  },
  "scripts": {
    "dev": "bun run index.ts",
    "build": "bun build index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@clerk/express": "^1.4.14",
    "@google/generative-ai": "^0.21.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/nodemailer": "^6.4.17",
    "axios": "^1.8.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "mongoose": "^8.12.0",
    "nodemailer": "^7.0.3",
    "razorpay": "^2.9.6",
    "zod": "^3.24.3"
  }
}
